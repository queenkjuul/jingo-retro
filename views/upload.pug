extends layout

include mixins/form
include mixins/links

block styles
  +featuresStylesheets()

block tools
  +tools('file', path, path)

block content
  #js--content.show
    +errors()
    h1 Upload File #{path && 'to /files' + path}

    form(action=`${proxyPath}/upload${path || ''}`, method='post', encType="multipart/form-data")
      input(type="file", name="file")
      br
      input(type="submit", value="Upload")

block scripts
  +featuresJavaScripts()